   <%= make_breadcrumb %>   
 <%= render_breadcrumbs  %>
   <% if permitted_to? :create %>         
<h5 class ='mt-5'>New Slot</h5>
            <% form_for @slot do |f| %>
            <%= f.hidden_field :doctor_id, :value => params[:doctor_id] %>
            <%= f.error_messages %>
            <form>
            <div class ="form-group mt-3">
                <%= f.label :start_time %>
                <%= f.text_field :slot_start_time, :class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :end_time %>
                <%= f.text_field :slot_end_time, :class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :slot_date %>
                <%= f.text_field :slot_date, :class => "form-control" %>
            </div>
                <%= f.submit "Create" , :class => "btn"%>
            <% end %>
            </form>
<% end %>