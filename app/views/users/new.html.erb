<html>
    <head>
    </head>
        <body>
            <h5>New User</h5>
            <% form_for @user do |f| %>
            <%= f.error_messages %>
            <p>
                <%= f.label :firstname %>
                <%= f.text_field :first_name %>
            </p>
            <p>
                <%= f.label :middlename %>
                <%= f.text_field :middle_name %>
            </p>
            <p>
                <%= f.label :lastname %>
                <%= f.text_field :last_name %>
            </p>
            <p>
                <%= f.label :dateofbirth %>
                <%= f.text_field :date_of_birth %>
            </p>
            <p>
                <%= f.label :address %>
                <%= f.text_area :address %>
            </p>
            <p>
                <%= f.label :contactnumber %>
                <%= f.text_field :contact_number %>
            </p>
            <p>
                <%= f.label :email %>
                <%= f.text_field :email %>
            </p>
            <p>
                <%= f.label :gender %>
                <%= f.text_field :gender %>
            </p>
            <p>
                <%= f.label :bloodgroup %>
                <%= f.text_field :blood_group %>
            </p>
                <p>
              <%= f.label :password %>
                <%= f.text_field :password %>
            </p>
            <p>
                <%= f.submit "Create" %>
            </p>
            <% end %>
    </body>
</html>
