<h5 style='text-align:center;color:brown'>New User</h5>
            <% form_for @patient do |f| %>
            <%= f.error_messages %>
            <form>
            <div class ="form-group">
                <%= f.label :first_name%>
                <%= f.text_field :first_name , :class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :middle_name %>
                <%= f.text_field :middle_name , :class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.label :date_of_birth %>
                <%= f.text_field :date_of_birth , :class => "form-control" ,:id => 'datepicker'%>
            </div>
           <div class ="form-group">
                <%= f.label :address %>
                <%= f.text_area :address , :class => "form-control" ,:rows=>7 %>
               
            </div>
            <div class ="form-group">
                <%= f.label :contact_number %>
                <%= f.text_field :contact_number, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, :class => "form-control"  %>
            </div>
           <div class ="form-group">
                <%= f.label  :gender%>
                <%=  f.select :gender, options_for_select(["male","female"].insert(0,'select a gender')),:class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :blood_group %>
                <%= f.text_field :blood_group, :class => "form-control"  %>
            </div>
            
                <!--<div class ="form-group">
              <%#= f.label :password %>
                <%#= f.text_field :password, :class => "form-control"  %>
            </div>-->
            <div class ="form-group">
                <%= f.submit "Create", :class => "btn" %>
            </div>
            <% end %>
            </form>
<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery('#datepicker').datepicker({
    });
});
</script>