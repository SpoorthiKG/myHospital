<br/><%= make_breadcrumb %>   
 <%= render_breadcrumbs  %>
<% if permitted_to? :previous_histroy %>
<span style="float:right;"><%= link_to "logout", logout_path %></span><br/>
<%if @discharged_patients.present?%>
<h3 class='mt-5'>Listing  Previous Records</h3>
<table class = "table table-hover">
    <thead>
  <tr>
    <th scope = "col">Date of Admission</th>
    <th scope = "col">Date of Discharge</th>
    <th scope='col'>Bed</th>
      </tr>
    </thead>
    <tbody>
<% @discharged_patients.each do |discharged_patient| %>
  <tr>
    <td><%= discharged_patient.admitted_on %></td>
    <td><%= discharged_patient.discharged_on %></td>
    <td ><%= discharged_patient.bed_id%></td>
  </tr>
  
<% end %>
   </tbody>
  <%else%>
   <br/><h2 class='mt-5' style ="color:red;">No Previous Histroy</h2>
  <%end%>
</table>
<br />
<%  end %>