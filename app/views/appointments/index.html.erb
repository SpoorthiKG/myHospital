<br/><%= make_breadcrumb %>   
 <%= render_breadcrumbs  %>
<% if permitted_to? :index %>
<span style="float:right;"><%= link_to "logout", logout_path %></span><br/>
<label class = 'mt-5'>Select a Doctor</label>
<%= select_tag :appointment, options_for_select(@doctors.map{|p| [p.first_name, p.id]}.insert(0, "Select a Doctor"))  , :class => "form-control mt-3" , :onchange => "show_the_value(this.value);" %>
<div id ="adding_appointment" style="margin-top: 10px;"></div>
<% end %>
<script>
  function show_the_value(doctor_id){
    jQuery.ajax({
            url : '/appointments/adding_appointment',
            data: {id: doctor_id}
          });
          
     }
</script>