<% if permitted_to? :edit %>
<% form_for ([@department,@doctor]) do |f| %>
            <%= f.error_messages %>
            
            <form>
            <div class ="form-group"><br/>
                <%= f.label :first_name %>
                <%= f.text_field :first_name , :class => "form-control" %>
            </div>
            <div class ="form-group">
                <%= f.label :middle_name %>
                <%= f.text_field :middle_name , :class => "form-control" %>
            </div>
                <%= f.hidden_field :department_id, :value => @department.id %>
            <div class ="form-group">
                <%= f.label :lastname %>
                <%= f.text_field :last_name, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.label :dateofbirth %>
                <%= f.text_field :date_of_birth , :class => "form-control datepicker", :id => "datepicker" %>
            </div>
           <div class ="form-group">
                <%= f.label :address %>
                <%= f.text_area :address , :class => "form-control",:rows=>7 %>
            </div>
            <div class ="form-group">
                <%= f.label :contactnumber %>
                <%= f.text_field :contact_number, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, :class => "form-control"  %>
            </div>
           <div class ="form-group">
                <%= f.label :gender %>
                <%=  f.select :gender, options_for_select(["male","female"].insert(0,'select a gender')),:class => "selectpicker", :id=>"sel1" %>
            </div>
            <div class ="form-group">
                <%= f.label :qualification %>
                <%= f.text_field :qualification, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.label :experience %>
                <%= f.text_field :experience, :class => "form-control"  %>
            </div>
            <div class ="form-group">
                <%= f.submit "Update", :class => "btn" %>
            </div>
            <% end %>
            </form>
<%end%>