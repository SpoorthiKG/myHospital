<div class ="row">
      <div class = "col-3 ml-auto w-25">
              <div class="card card-body mb-2">
                                      New Patient??<br/>
                                      <%= link_to "Sign up",new_patient_path%>
              </div>
      </div>
</div>
 <p style="color: blue"><%= flash[:notice] %></p>
<div class = "row">
      <div class = "col">
            <div class = "mx-auto text-center p-5 logo">
                  <% form_for :user , :url => {:action => :signin , :controller => :users} do  |f| %>
                <div class="form-group text-danger"><%= f.label :Username%> <%= f.text_field :first_name, :class=>"rounded"%> </div>
                <div class="form-group text-danger"><%= f.label :Password%> <%= f.password_field :password , :class=>"rounded"%></div>
                  <%= f.submit :signin , :class => "mt-3 btn"%>
                  <% end %>
                              
            </div>
      </div>
</div>