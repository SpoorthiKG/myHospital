<br/><%= make_breadcrumb %>   
 <%= render_breadcrumbs  %>
<% if permitted_to? :record_view %>
<span style="float:right;"><%= link_to "logout", logout_path %></span><br/>
<%if @records.present?%>
<h3 class = "mt-5">Listing Records</h3>
<table class = "table table-hover">
    <thead>
  <tr>
    <th scope = "col">Medication</th>
    <th scope = "col">Description</th>
  </tr>
    </thead>
    <tbody>
<% @records.each do |record| %>
  <tr>
      <td><%=  record.medication%></td>
    <td><%= link_to record.record_file_name, record.record.url,:download => record.record%></td>
  </tr>
  
<% end %>
   </tbody>
  <%else%>
   <br/><h2 style ="color:red;">No Records</h2>
  <%end%>
</table>
<%end%>