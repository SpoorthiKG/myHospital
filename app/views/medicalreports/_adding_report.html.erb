<%if @reports.present?%>
<h3 class = "mt-5">Listing Records</h3>
<table class = "table table-hover">
    <thead>
  <tr>
    <th scope = "col">Medication</th>
    <th scope = "col">Description</th>
    
  </tr>
    </thead>
    <tbody>
<% @reports.each do |record| %>
  <tr>
      <td><%=  record.medication%></td>
    <td><%= link_to record.record_file_name, record.record.url,:download => record.record%></td>
    
    <td></td>
  </tr>
  
<% end %>
   </tbody>
  <%else%>
   <br/><h5 style = "color:red;text-align:center">No Records</h5>
  <%end%>
</table>
