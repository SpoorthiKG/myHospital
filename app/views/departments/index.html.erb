<%= make_breadcrumb %>   
 <%= render_breadcrumbs  %>
<% if permitted_to? :index %>
<%if @departments.present?%>
<h3 class ='mt-5'>Listing departments</h3>
<table class = "table table-hover">
    <thead>
  <tr>
    <th scope = "col">Name</th>
    <th scope = "col">Description</th>
    <th scope = "col">Action</th>
  </tr>
    </thead>
    <tbody>
<% @departments.each do |department| %>
  <tr>
    <td><%=h department.name %></td>
    <td><%=h department.description %></td>
    <td><%= link_to 'View Doctors', department_doctors_path(department) %><br/>
    <%= link_to 'Add Doctor', new_department_doctor_path(department) %></td>
  </tr>
  
<% end %>
   </tbody>
  <%else%>
  <h2 class ='mt-5'>No departments</h2>
  <%end%>
</table>
<br />
<button type = "button" class = "btn btn-warning"><%= link_to 'New Department', new_department_path %></button>
<%end%>